<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9CDCD"
    tools:context=".LayoutTrangchu1Activity">
    <RelativeLayout
        android:id="@+id/layout_Trangchu1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/btn_trangchu1_anh"
            android:layout_alignParentTop="true"
            android:id="@+id/layout_Trangchu1_Anh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_clicked"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/img_clicked"
                android:id="@+id/avatar"
                app:cardCornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_clicked"
                android:layout_toRightOf="@id/avatar"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Bạch Trung Kiên"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_Follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_Name"
                android:layout_toRightOf="@id/avatar"
                android:layout_marginLeft="10dp"
                android:text="510 người theo dõi"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
            <Button
                android:layout_below="@+id/img_clicked"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_follow"
                android:background="@drawable/btn_follow"
                android:textAllCaps="false"
                android:text="Theo dõi"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <ImageView
                android:layout_marginBottom="50dp"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/btn_follow"
                android:layout_alignParentRight="true"
                android:id="@+id/ic_search"
                android:src="@drawable/ic_search_notchoose"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/img_clicked"
                android:id="@+id/txt_clicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_truycap"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@id/txt_clicked"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="100dp"
                android:background="@drawable/btn_follow"
                android:text="Truy cập"
                android:textAllCaps="false" />

            <Button
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:id="@+id/btn_luu"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@id/txt_clicked"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="100dp"
                android:background="@drawable/btn_signin"
                android:text="Lưu"
                android:textAllCaps="false" />

            <RelativeLayout

                android:id="@+id/layout_trangchu1_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_back" />

                <ImageView
                    android:id="@+id/button_moreoption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_moreoption" />
            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/btn_trangchu1_info"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout_Trangchu1_Anh"
            android:id="@+id/layout_trangchu1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Thêm vào danh sách yêu thích"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ghichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/like"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Thêm ghi chú cho chính mình"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_trangchu1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_trangchu1_2"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_trangchu1_info">

            <TextView
                android:id="@+id/nhanxet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Nhận xét"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cauhoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nhanxet"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/tv_cauhoi"
                android:id="@+id/avatar_nhanxet"
                app:cardCornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/edt_themnhanxet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_cauhoi"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/avatar_nhanxet"
                android:background="@android:color/transparent"
                android:hint="Thêm nhận xét" />
        </RelativeLayout>
    </RelativeLayout>



</ScrollView>